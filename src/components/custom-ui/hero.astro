---
interface Props {
    heading?: string;
    subheading?: string;

}
import { Image } from 'astro:assets';
import PlaceholderBackground from '../../assets/background/random_bg.avif';
const { heading = "Placeholder", subheading = "Subheading" } = Astro.props
---
<div class="h-auto md:h-auto flex flex-col items-start justify-center px-0 pb-0 md:pb-12 pt-40 md:pt-48 relative w-full max-w-[100dvw] z-0 gap-4">
		<h1 class="text-3xl md:text-6xl font-bold text-balance max-w-[80dvw] my-0 md:max-w-[1200px] w-full mx-auto z-[1]">{heading}</h1>
        <Image src={PlaceholderBackground} alt={heading} loading="eager" decoding="async" class="absolute left-0 right-0 top-0 bottom-0 object-cover object-center m-0 w-full h-full z-0 grayscale opacity-25 mix-blend-color-dodge touch-none select-none pointer-events-none" />
        <h2 class="font-bold text-balance max-w-[80dvw] md:max-w-[1200px] w-full mx-auto z-[1]">{subheading}</h2>
<div class="absolute bottom-0 top-auto w-full h-full bg-gradient-to-b from-transparent to-[var(--lime-1)]"></div>
    </div>